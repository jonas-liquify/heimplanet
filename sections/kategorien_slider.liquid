<div class="page-padding"><div class="container-large swiper-container"><div class="padding-section-small"><div class="section_headline"><h2 class="heading-style-h2">
{{ section.settings.text_headline }}
</h2>
<div class="product-slider_buttons"><a class="button is-small w-button" href="{{ section.settings.url_button_link }}"> {{ section.settings.text_button_text }} </a>
<div class="product-slider_arrows hide-mobile-landscape"><a href="#" class="swiper-arrows swiper-prev w-inline-block"><div class="swiper-arrow w-embed"><svg width="100%" height="100%" viewbox="0 0 8 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7.00006 10.4999L1 5.5L7.00006 0.500061" stroke="currentColor"></path></svg></div></a><a href="#" class="swiper-arrows swiper-next w-inline-block"><div class="swiper-arrow w-embed"><svg width="100%" height="100%" viewbox="0 0 8 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7.00006 10.4999L1 5.5L7.00006 0.500061" stroke="currentColor"></path></svg></div></a></div></div></div><div><div class="swiper is-kategorie-slider w-dyn-list"><div role="list" class="swiper-wrapper is-kategorie-slider w-dyn-items">{% for block in section.blocks %}
    {% if block.type == "kategorie" %}
                    <div li-block="Kategorie" role="listitem" class="swiper-slide is-kategorie-slider w-dyn-item">
                                    <a class="kategorie-kachel_item w-inline-block" href="{{ block.settings.url_link }}"> <img class="kategorie-kachel_bild" src="{{ block.settings.image_bild | img_url: 'master' }}" alt="{{ block.settings.image_bild.alt }}" loading="lazy"><div class="kategorie-kachel_overlay"><h3 class="heading-medium text-color-white">{{ block.settings.text_headline_kategorie }}</h3></div> </a>

                            </div>
            {% endif %}
{% endfor %}
</div><div class="w-dyn-empty"><div>No items found.</div></div></div><div class="swiper-scrollbar"></div><div class="swiper-scrollbar-drag"></div></div><div class="hide w-embed w-script">{% if section.settings.checkbox_swiper_script == true %}
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>{% endif %}
<script>document.addEventListener('DOMContentLoaded', function () {
    $(".swiper-container").each(function (index) {
      const swiper{{section.index}} = new Swiper($(this).find(".swiper.is-kategorie-slider")[0], {
        slidesPerView: "auto",
        freeMode: {
          enabled: false,
          sticky: true,
        },
        spaceBetween: 16,
        mousewheel: {       
          forceToAxis: true,    
        },  
        a11y: false,
        scrollbar: {
          el: $(this).find(".swiper-scrollbar")[0],
          hide: false,
          draggable: true,
          snapOnRelease: false,
        },
        navigation: {
          nextEl: $(this).find(".swiper-next")[0],
          prevEl: $(this).find(".swiper-prev")[0],
        },
      });
    });
  });
</script></div></div></div></div> {% schema %} {"tag":"section","name":"kategorien_slider","class":"section_katrgoie-slider","blocks":[{"name":"Kategorie","type":"kategorie","settings":[{"id":"url_link","type":"url","label":"Link"},{"id":"image_bild","type":"image_picker","label":"Bild"},{"id":"text_headline_kategorie","type":"text","label":"Headline-Kategorie","default":"Best Buy Toskana"}]}],"settings":[{"id":"text_headline","type":"text","label":"Headline","default":"Shoppe nach Kategorien"},{"id":"text_button_text","type":"text","label":"Button-Text","default":"Alle Produkte"},{"id":"url_button_link","type":"url","label":"Button-Link"},{"id":"checkbox_swiper_script","type":"checkbox","label":"Swiper-Script","default":true}],"presets":[{"name":"kategorien_slider","category":"Liquify"}]} {% endschema %}