                    <div li-block="USPs" class="swiper-slide subbanner_content-item">
                                    <img class="subbanner_content-img"
     src="{{ block.settings.image_icon | img_url: 'master' }}"
     alt="{{ block.settings.image_icon.alt }}"
     loading="lazy">

                                    <div class="text-size-regular text-weight-semibold">
