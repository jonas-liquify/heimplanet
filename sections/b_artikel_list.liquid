<div class="padding-global padding-section-medium"><div class="container-large"><div class="blog_article_top"><h2>
{{ section.settings.text_headline }}
</h2>
<div class="blog_articles_form">{% for block in section.blocks %}
    {% if block.type == "blog" %}
                    <div li-block="Blog">
                                    <a href="{{ block.settings.url_link }}" class="fs-radio_field-4 w-inline-block"> <div class="fs-radio_label-4">{{ block.settings.text_blog_titel }}</div> </a>

                            </div>
            {% endif %}
{% endfor %}
</div></div><div li-for:inside="article in blog.articles" fs-cmsfilter-element="list" class="blog_article_component">
        {% for article in blog.articles %}                            
                            <a li-object:href="article.url" href="{{ article.url }}" class="blog_article_item w-inline-block"><div id="w-node-c45bff24-6242-fee4-5061-f2f14b06a7be-4b06a7bd" class="blog_article-img-wrapper"><img src="{{ article.image | img_url: 'master' }}" loading="lazy" id="w-node-c45bff24-6242-fee4-5061-f2f14b06a7bf-4b06a7bd" li-object:src="article.image | img_url: 'master'" alt="{{ article.image.alt }}" li-object:alt="article.image.alt" class="blog_article-img">
<div class="blog_tags">{% for tags in article.tags %}    <div li-for="tags in article.tags" class="hide">
                                    
                            <div li-object="tag" class="blog_tag">{{ tag }}</div>
                            
                        </div>
{% endfor %}</div></div><div class="blog_info-wrapper"><div class="blog_article_content"><h3 li-object="article.title" class="heading-style-h3">{{ article.title }}</h3><p li-object="article.excerpt">{{ article.excerpt }}</p></div><div class="mehr-erfahren"><div>
{{ section.settings.text_mehr_erfahren }}
</div>
<img src="{{ 'arrow-back.svg' | asset_url }}" loading="lazy" alt="" class="mehr-erfahren-icon">
</div></div></a>
                            
                    {% endfor %}    </div>
</div></div><div class="li-custom w-embed"></div>
 {% schema %} {"tag":"section","name":"B - Artikel List","class":"section_blog_article","blocks":[{"name":"Blog","type":"blog","settings":[{"id":"url_link","type":"url","label":"Link"},{"id":"text_blog_titel","type":"text","label":"Blog Titel","default":"Entkalkung"}]}],"settings":[{"id":"text_headline","type":"text","label":"Headline","default":"Alle Artikel"},{"id":"text_mehr_erfahren","type":"text","label":"Mehr erfahren","default":"Mehr erfahren"},{"type":"range","id":"offset","min":0,"max":50,"step":1,"unit":"Itm","label":"Offset Blog Article","default":1}],"presets":[{"name":"B - Artikel List","category":"Liquify"}]} {% endschema %}